<div>
  {{> "modules/pokemon-assets/templates/token-settings.hbs"}}
  <div class="form-group anchor">
    <label for="anchor">Anchor (Y)</label>
    <div class="form-fields">
      <input type="number" name="anchor" value="{{anchor}}">
    </div>
    <p class="hint">0.5 is vertically centered</p>
  </div>
  <div class="form-group scale">
    <label for="anchor">Scale</label>
    <div class="form-fields">
      <range-picker name="scale" value="{{scale}}" min="0.2" max="3" step="0.05"></range-picker>
    </div>
    <p class="hint">The scale (ratio) of the token art</p>
  </div>
</div>