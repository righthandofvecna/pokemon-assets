<div class="tab {{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="form-group">
        <label>Apply Settings Only Out-Of-Combat</label>
        <div class="form-fields">
            <input type="checkbox" name="flags.pokemon-assets.outOfCombat" {{#if flags.outOfCombat}}checked{{/if}}>
        </div>
    </div>
    <div class="form-group">
        <label>Disallow Diagonals</label>
        <div class="form-fields">
            <input type="checkbox" name="flags.pokemon-assets.diagonals" {{#if flags.diagonals}}checked{{/if}}>
        </div>
    </div>
    <div class="form-group">
        <label>Keyboard Controls Only</label>
        <div class="form-fields">
            <input type="checkbox" name="flags.pokemon-assets.disableDrag" {{#if flags.disableDrag}}checked{{/if}}>
        </div>
    </div>
</div>