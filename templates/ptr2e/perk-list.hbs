<div class="perk-list-dialog">
    <header>
        <div class="ap-display">
            <strong>Available AP:</strong> {{apAvailable}} | <strong>Available RVs:</strong> {{rvsAvailable}}
        </div>
        <div class="perk-controls">
            <div class="filter-group">
                <label for="name-filter">
                    <i class="fas fa-search"></i>
                    Filter by name:
                </label>
                <input type="text" id="name-filter" class="name-filter" placeholder="Search perks..." value="{{nameFilter}}">
            </div>
            <button class="sort-toggle" title="Toggle sort mode">
                {{#if (eq sortMode "cost")}}
                    <i class="fas fa-coins"></i> Sort: Cost
                {{else}}
                    <i class="fas fa-sort-alpha-down"></i> Sort: A-Z
                {{/if}}
            </button>
        </div>
        <div class="perk-summary">
            <div class="perk-summary-item">
                <strong>{{summary.purchased}}</strong>
                <div>Purchased</div>
            </div>
            <div class="perk-summary-item">
                <strong>{{summary.availableNow}}</strong>
                <div>Available Now</div>
            </div>
            <div class="perk-summary-item">
                <strong>{{summary.availableLater}}</strong>
                <div>Available Later</div>
            </div>
            <div class="perk-summary-item">
                <strong>{{summary.locked}}</strong>
                <div>Locked</div>
            </div>
        </div>
    </header>
    <section class="perk-categories">
        <div class="perk-category" data-category="purchased">
            <h3>‚úì Purchased ({{purchased.length}})</h3>
            {{> "modules/pokemon-assets/templates/ptr2e/perk-list-category.hbs" perks=purchased category="purchased" apAvailable=apAvailable}}
        </div>
        
        <div class="perk-category" data-category="availableNow">
            <h3>‚Üí Available Now ({{availableNow.length}})</h3>
            {{> "modules/pokemon-assets/templates/ptr2e/perk-list-category.hbs" perks=availableNow category="available-now" apAvailable=apAvailable}}
        </div>
        
        <div class="perk-category" data-category="availableLater">
            <h3>‚è≥ Available Later ({{availableLater.length}})</h3>
            {{> "modules/pokemon-assets/templates/ptr2e/perk-list-category.hbs" perks=availableLater category="available-later" apAvailable=apAvailable}}
        </div>
        
        <div class="perk-category" data-category="locked">
            <h3>üîí Locked ({{locked.length}})</h3>
            {{> "modules/pokemon-assets/templates/ptr2e/perk-list-category.hbs" perks=locked category="locked" apAvailable=apAvailable}}
        </div>
    </section>
</div>
